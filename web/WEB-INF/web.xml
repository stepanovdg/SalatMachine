<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <welcome-file-list>
        <!--welcome-file>/view/unlogined/index.jspx</welcome-file-->
        <welcome-file>/view/static/index.html</welcome-file>
    </welcome-file-list>
    <security-role>
        <description>fur secure section</description>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description>for logined users</description>
        <role-name>userrole</role-name>
    </security-role>
    <servlet>
        <description/>
        <display-name>ControllerServlet</display-name>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>by.bsu.salatmachine.controller.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>secure</web-resource-name>
            <url-pattern>/view/secure/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>furUsers</web-resource-name>
            <url-pattern>/view/logined/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>userrole</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>furGuests</web-resource-name>
            <url-pattern>/view/unlogined/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <error-page>
            <error-code>500</error-code>
            <location>/view/unlogined/error.jspx</location>
        </error-page>
    <error-page>
            <error-code>404</error-code>
            <location>/view/unlogined/error.jspx</location>
        </error-page>
        <error-page>
            <exception-type>java.lang.Throwable</exception-type>
            <location>/view/unlogined/error.jspx</location>
        </error-page>

</web-app>